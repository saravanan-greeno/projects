<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_top_rounded"
    tools:context=".EditCommodityPriceActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/commodityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            
            android:layout_weight="1"
            android:maxLength="30"
            android:maxLines="3"
         
            android:layout_gravity="center"
            android:gravity="center|left"
            android:textColor="#3d5b70"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/priceValue1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:focusable="true"
            android:gravity="center|left"
            
            android:paddingTop="8dp"
            android:inputType="numberDecimal"
            android:layout_gravity="center|center_vertical"
            android:maxLength="7"
            android:paddingLeft="5dp"
            android:textColor="#eb6f58"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" >
        </EditText>

        <TextView
            android:id="@+id/unitValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginTop="2dp"
            android:layout_weight="0.5"
            android:text="Kg"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#4e9961" />

        <TextView
            android:id="@+id/vendorId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/commodityId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/projects/livePrice/src/main/res/layout/category_list_edit.xml -->