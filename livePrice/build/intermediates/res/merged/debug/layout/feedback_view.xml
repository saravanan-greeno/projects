 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1b458f">
   
         <LinearLayout 
             android:id="@+id/dateLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp" 
        android:orientation="horizontal"
        android:background="#1b458f"
        android:layout_margin="5dp">

             

             <TextView
                 android:id="@+id/fromDate"
                 android:layout_width="0dp"
                 android:layout_height="40dp"
                 android:textColor="#ffffff"
                
                 android:hint="From Date"
                 android:textColorHint="#ffffff"
                 android:gravity="left|center"
                 android:paddingLeft="4dp"
                 android:textSize="14dp"
                 android:layout_weight="1"
                  android:layout_margin="5dp" 
                android:background="@drawable/spinner_transparant"/>
             
             <TextView
                 android:id="@+id/todate"
                 android:layout_width="0dp"
                 android:layout_height="40dp"
                  android:layout_weight="1"
                 android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                 android:layout_margin="5dp" 
                 android:hint="To Date"
                  android:paddingLeft="4dp"
                 android:gravity="left|center"
                 android:textSize="14dp"
                   android:background="@drawable/spinner_transparant"/>

             <ImageView
                 android:id="@+id/proceed"
                 android:layout_width="0dp"
                 android:layout_height="40dp"
                 android:layout_margin="5dp"
                   android:layout_weight=".3"
                 android:background="@drawable/play"
                 android:paddingLeft="10dp" />

 </LinearLayout>
  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
     >

        <ListView
            android:id="@+id/listdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animationCache="false"
            android:focusable="false"
             android:focusableInTouchMode="false"
            android:divider="@android:color/transparent"
            android:dividerHeight="6dp"
            android:fastScrollEnabled="true"
            
            android:listSelector="#00000000"
            android:longClickable="true"
            android:persistentDrawingCache="scrolling"
            android:scrollbarThumbHorizontal="@android:color/transparent"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:scrollingCache="false"
            android:smoothScrollbar="true" >
        </ListView>
        
    </RelativeLayout>
 <LinearLayout 
     android:id="@+id/noDataLayout"
     android:layout_width="match_parent"
     android:layout_height="300dp"
     android:gravity="center"
     android:visibility="gone"
     >
   	<TextView 
   	    android:layout_width="match_parent"
   		android:layout_height="match_parent" 
   		android:text="No feedback given." 
   		android:layout_marginTop="15dp"
	    android:layout_marginLeft="15dp"
   		android:textSize="18dp"
   		android:textColor="#FFFFFF"  		
   		android:textStyle="bold"
   		android:gravity="center"
   		 
   		/>
 </LinearLayout> 
 
 	<LinearLayout
         android:id="@+id/noInternetConnection"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:layout_gravity="center"
         android:orientation="vertical"
         >
  
	  <ImageView
	     android:id="@+id/nonet"
	     android:layout_width="100dp"
	     android:layout_height="wrap_content"
	     android:layout_centerInParent="true" 
	     android:layout_gravity="center"
	     android:src="@drawable/signal"
	       />
	 
	 	<TextView
	             android:id="@+id/NoNetText"
	             android:layout_width="290dp"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="15dp"
	             android:layout_marginLeft="15dp"
	             android:gravity="center_horizontal"
	             android:text="Check your connection and try again"
	             android:textSize="20dp" 
	             android:textColor="#ffffff"
	             android:textStyle="bold"
	       />
	 
	   <Button
	     android:id="@+id/tabToLoad"
	     android:layout_width="100dp"
	     android:layout_height="wrap_content"
	     android:layout_centerInParent="true"
	     android:background="@drawable/retry"
	     android:layout_below="@id/NoNetText"
	     android:layout_marginTop="15dp"
	     android:layout_gravity="center"
		/>
	</LinearLayout>
       
    </LinearLayout>
