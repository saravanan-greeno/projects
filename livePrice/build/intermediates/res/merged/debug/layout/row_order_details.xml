<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_top_rounded"
    tools:context=".CommodityDetailsActivity" >

    <RelativeLayout
        android:id="@+id/firstlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

      
 <!--  android:background="@drawable/image_bg" -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="17sp"
            android:paddingTop="3dp"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:textColor="#264861"
             android:layout_margin="3dp" />
         <TextView
            android:id="@+id/StatusVAlue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
             android:maxLines="3"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:textColor="#264861"
            android:visibility="gone" />
        
         <TextView
            android:id="@+id/mobilenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
             android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#264861" 
             android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/orderId"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:maxLength="30"
            android:textSize="12sp"
            android:layout_below="@+id/name"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:textColor="#5f5f5f" 
            android:layout_margin="4dp"/>

         <!-- style="@style/imageView" -->

        

    </RelativeLayout>

   
 
        <RelativeLayout
        android:id="@+id/dateLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/firstlayer"
         
        android:background="@drawable/list_view_bottom_rounded" >



	        <TextView
	            android:id="@+id/date"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	          	android:layout_alignParentLeft="true"
	            android:paddingLeft="10dp"
	          
	            android:paddingBottom="5dp"
	            android:gravity="center"
	            android:textColor="#83717f" />

	        <ImageView
	            android:id="@+id/status"
	            android:layout_width="100dp"
	            android:layout_height="40dp"
	            android:layout_alignParentRight="true"
	            android:layout_margin="4dp"
	            
	            android:src="@drawable/continue_btn"
	            android:visibility="gone" />
	        
	       

   

    <ImageView
        android:id="@+id/cancel_order1"
        android:layout_width="40dp"
        android:layout_height="40dp"
      android:layout_margin="2dp"
          android:layout_alignParentRight="true"
        android:src="@drawable/cancel" />

    <ImageView
        android:id="@+id/delivered_status1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
         android:layout_marginTop="2dp"
         android:layout_marginBottom="2dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/cancel_order1"
        android:src="@drawable/accept" />
   
    	</RelativeLayout>
 

</RelativeLayout>
