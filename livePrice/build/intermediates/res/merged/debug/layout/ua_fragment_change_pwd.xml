<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
	android:layout_marginLeft="@dimen/ua_frg_pwd_left_margin"
    android:layout_marginRight="@dimen/ua_frg_pwd_right_margin" >
    
    <ImageView
         android:id="@+id/app_logo_chng_pwd"
         android:contentDescription="@string/app_logo_content_desc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="top"
         android:layout_marginTop="0dp"
         android:layout_marginBottom="@dimen/ua_appLogoMarginBottom"
         android:src="@drawable/ua_ic_launcher"/>
    
    <TextView 
        android:id="@+id/reset_pwd_tv"
        android:text="@string/change_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/ua_layoutMarginTop"
        android:layout_marginBottom="@dimen/ua_layoutMarginBottom"
        android:textColor="@color/custom_blue"
        android:textSize="@dimen/ua_forgot_pwd_text_size_large"/>
    
    <EditText
         android:id="@+id/new_pwd_et"
         style="@style/LoginTextFieldTheme"
         android:ems="10"
         android:hint="@string/new_pwd_et_hint"
         android:textCursorDrawable="@null"
         android:inputType="textPassword"/>
    
    <EditText
         android:id="@+id/confirm_pwd_et"
         style="@style/LoginTextFieldTheme"
         android:ems="10"
         android:hint="@string/confirm_pwd_et_hint"
         android:textCursorDrawable="@null"
         android:imeOptions="actionDone"
         android:inputType="textVisiblePassword"/>
    
    <Button
         android:id="@+id/update_bt"
         style="@style/LoginTextFieldTheme"
         android:text="@string/update"
         android:textColor="@android:color/white"
         android:textSize="@dimen/ua_login_btn_text_size"
         android:layout_marginTop="@dimen/ua_layoutMarginTop"
         android:layout_marginBottom="@dimen/ua_layoutMarginBottom"
         android:background="@drawable/ua_bg_login_button"
         android:layout_width="@dimen/ua_login_btn_width"
         android:layout_gravity="right" />     

</LinearLayout>
