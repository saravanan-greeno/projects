<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_marginLeft="@dimen/ua_frg_pwd_left_margin"
    android:layout_marginRight="@dimen/ua_frg_pwd_right_margin">
    
    <ImageView
         android:id="@+id/app_logo_user_policy"
         android:contentDescription="@string/app_logo_content_desc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="top"
         android:layout_marginTop="0dp"
         android:layout_marginBottom="@dimen/ua_appLogoMarginBottom"
         android:src="@drawable/ua_ic_launcher"/>
    
    <TextView 
        android:id="@+id/user_policy_tv"
        android:text="@string/user_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/ua_layoutMarginTop"
        android:layout_marginBottom="@dimen/ua_layoutMarginBottom"
        android:textColor="@color/custom_blue"
        android:textSize="@dimen/ua_forgot_pwd_text_size_large"/>
    
    <WebView
        android:id="@+id/user_policy_content_wv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ua_webview_height" 
        android:layout_marginBottom="@dimen/ua_layoutMarginBottomExtra"
        android:background="@android:color/transparent"/>
    
</LinearLayout>
