<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_top_rounded"
    tools:context=".CommodityDetailsActivity" >

    <RelativeLayout
        android:id="@+id/firstlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/commodityimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dip"
            android:layout_marginTop="7dp"
            android:padding="3dip" >

            <ImageView
                android:id="@+id/list_commodity_image"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />
        </FrameLayout>
        <!-- android:background="@drawable/image_bg" -->

        <TextView
            android:id="@+id/commodityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/commodityimage"
            android:layout_toRightOf="@+id/commodityimage"
            android:maxLength="30"
            android:maxLines="3"
            android:paddingLeft="10dp"
            android:textColor="#264861"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/varietyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commodityname"
            android:layout_toRightOf="@+id/commodityimage"
            android:maxLength="60"
            android:maxLines="3"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:textColor="#5f5f5f"
            android:textSize="13dp" />

        <!-- style="@style/imageView" -->

        <TextView
            android:id="@+id/discountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/varietyname"
            android:layout_toRightOf="@+id/commodityimage"
            android:paddingLeft="10dp"
            android:textColor="#e96044"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/varietyname"
            android:layout_toRightOf="@+id/discountPrice"
            android:paddingRight="10dp"
            android:textColor="#e96044"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/offer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstlayer"
        android:background="@drawable/list_view_bottom_rounded" >

        <ImageView
            android:id="@+id/imageoffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/offer"
            android:paddingLeft="1dp"
           android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/discountInPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageoffer"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="#e96044" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="#6bba70"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/unitTypeTagValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textColor="#e96044" />

        <ImageView
            android:id="@+id/imageHideShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageoffer"
            android:layout_margin="2dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="1dp"
            android:paddingTop="1dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/price"
            android:paddingRight="5dp"
            android:paddingTop="6dp"
            android:textColor="#83717f" />
        
        <TextView
            android:id="@+id/mainCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout> 

