<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_top_rounded"
   tools:context=".FeedbackViewActivity" >
 
  
      
 <!--  android:background="@drawable/image_bg" -->
        <TextView
            android:id="@+id/fedbackdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:paddingTop="3dp"
            android:maxLines="1"
	        android:scrollHorizontally="true"
			android:ellipsize="end"
             android:layout_alignParentLeft="true"
            android:maxLength="25"
            android:paddingLeft="10dp"
            android:textColor="#264861"
             android:layout_margin="3dp" />
         <TextView
            android:id="@+id/feedbackId"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
             android:maxLines="3"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:textColor="#264861"
            android:visibility="gone" />
         <Button 
        android:id="@+id/viewer" 
        android:layout_width="wrap_content" 
        android:layout_height="35dp"
        android:background="@drawable/view"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        
        />
         <TextView
            android:id="@+id/feedbackType"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:maxLength="30"
            android:textSize="12sp"
             android:layout_alignParentLeft="true"
             android:layout_below="@+id/fedbackdetails"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:textColor="#5f5f5f" 
            android:layout_margin="4dp"/>

         <!-- style="@style/imageView" -->
 
 
</RelativeLayout>
 