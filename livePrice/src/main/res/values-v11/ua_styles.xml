<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="UserAuthAppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/UserAuthMyActionBar</item>
    </style>
    
    <!--     Custom Action Bar Style for Login -->
    <style name="UserAuthActionBar"
           parent="android:Widget.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:displayOptions"></item>
    </style>

</resources>
